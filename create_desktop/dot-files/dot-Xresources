!-- Xft settings -- !
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull
! xterm
xterm*faceSize: 14
xterm*faceName: Source Code Pro Medium
xterm*geometry: 90x35
xterm*selectToClipboard: true
xterm*background: Black
xterm*foreground: White
xterm*scrollBar: true
xterm*color0:  Black
xterm*color1:  Red3
xterm*color2:  Green3
xterm*color3:  Yellow3
xterm*color4:  Blue3
xterm*color5:  Magenta3
xterm*color6:  Cyan3
xterm*color7:  AntiqueWhite
xterm*color8:  Grey25
xterm*color9:  Red
xterm*color10: Green
xterm*color11: Yellow
xterm*color12: Blue
xterm*color13: Magenta
xterm*color14: Cyan
xterm*color15: White
! -- Fonts -- !
xterm.font:xft:Monospace:pixelsize=14
xterm.boldfont:xft:Monospace-Bold:pixelsize=14

! Cursor type and size
Xcursor*theme: whiteglass
Xcursor*size: 72
! urxvt
URxvt.termName: rxvt
URxvt*background: Black
